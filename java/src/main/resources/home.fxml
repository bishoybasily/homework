<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" spacing="16.0" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.gmail.bishoybasily.issr.proj.screen.ScreenHome">
    <children>
        <TableView fx:id="tableUsers">
            <columns>
                <TableColumn fx:id="columnName" prefWidth="119.0" text="Name"/>
                <TableColumn fx:id="columnEmail" prefWidth="241.0" text="Email"/>
                <TableColumn fx:id="columnTelephone" prefWidth="176.0" text="Telephone"/>
                <TableColumn fx:id="columnDelete" prefWidth="75.0"/>
            </columns>
        </TableView>
        <HBox alignment="CENTER" spacing="8.0">
            <children>
                <TextField fx:id="textName" promptText="Name"/>
                <TextField fx:id="textEmail" promptText="Email"/>
                <TextField fx:id="textTelephone" promptText="Telephone"/>
            </children>
            <padding>
                <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
            </padding>
        </HBox>
        <Button fx:id="buttonSave" mnemonicParsing="false" text="Save"/>
    </children>
    <padding>
        <Insets bottom="8.0" left="60.0" right="60.0" top="60.0"/>
    </padding>
</VBox>
